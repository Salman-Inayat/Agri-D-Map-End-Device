{
  "name": "agri-vision",
  "version": "1.0.0",
  "description": "An Electron application with React and Node",
  "main": "./main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"npm run server-start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "react-build": "react-app-rewired build",
    "react-start": "react-app-rewired start",
    "server-build": "babel server --out-dir build-server",
    "server-start": "nodemon --watch server --exec babel-node server/server.js",
    "electron-dev": "node scripts/dev.js scripts/start.js",
    "electron-pack": "electron-builder -c.extraMetadata.main='./main.js'",
    "preelectron-pack": "npm run react-build && npm run server-build"
  },
  "author": "Salman Inayat",
  "devDependencies": {
    "react-app-rewired": "^2.1.3",
    "customize-cra": "^0.2.12",
    "react-scripts": "3.0.1",
    "concurrently": "^4.1.0",
    "wait-on": "^3.2.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0",
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.4"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.2.5",
    "@mui/styles": "^5.2.3",
    "app-module-path": "^2.2.0",
    "axios": "^0.24.0",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "electron-is-dev": "^1.1.0",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "material-ui-audio-player": "^1.7.1",
    "nodemon": "^1.19.1",
    "piping": "^1.0.0-rc.4",
    "python-shell": "^3.0.1",
    "react": "^17.0.2",
    "react-dom": "^16.8.6",
    "react-images-upload": "^1.2.8",
    "react-loading-overlay": "^1.0.1",
    "react-webcam": "^6.0.0"
  },
  "build": {
    "appId": "com.electron-react-node",
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "deb": {},
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "build/**/**/*",
      "build-server/**/**/*",
      "node_modules/**/*",
      "./main.js"
    ],
    "extraFiles":[
      "server/**/**/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": []
}
